
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["@radix-ui/themes"],
    "rootDir": "./lib"
  },
  "include": [
    "lib/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-app/**/*"
  ]
}